	<fieldset>
		<legend>Bids now for this item</legend>
		<div class="form_field">
			<%= f.select(:user_id, options_for_select(@users.map { |user| [user.name, user.id] })) %>
		</div>
		<div class="form_field">
			<%= f.label "â‚¬" %>
			<%= f.text_field :amount, placeholder: "99,99" %>
		</div>
		<%= f.submit 'Save bid' %>
	</fieldset>
<% end %>